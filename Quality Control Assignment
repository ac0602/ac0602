import os
import numpy as n
import pandas as pd
import matplotlib.pyplot as plt

from tabulate import tabulate
from scipy.stats import beta
#load example datas
ex_data1 = pd.read_csv ('9.1.csv')

d2 = [0, 0, 1.128, 1.693, 2.059, 2.326, 2.534, 2.704, 2.847, 2.970, 3.078]
